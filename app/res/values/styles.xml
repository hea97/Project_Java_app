<resources>
    <!-- 앱 테마 -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">#121212</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:fontFamily">@font/black_han_sans</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 기본 텍스트 스타일 -->
    <style name="TextStyleBase">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/black_han_sans</item>
    </style>

    <style name="TextStyleLarge" parent="TextStyleBase">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextStyleMedium" parent="TextStyleBase">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextStyleSmall" parent="TextStyleBase">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 화면별 스타일 -->
    <style name="MainTitleStyle" parent="TextStyleLarge">
        <item name="android:gravity">center</item>
    </style>

    <style name="ExchangeRateStyle" parent="TextStyleLarge">
        <item name="android:gravity">center</item>
    </style>

    <style name="FooterStyle" parent="TextStyleSmall">
        <item name="android:gravity">center</item>
        <item name="android:background">#4E4D4D</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>