<resources>
    <!-- 기본 텍스트 스타일 -->
    <style name="TextStyleLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- 테마별 텍스트 스타일 -->
    <style name="TextAppearance.JP">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.Emoji">
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextAppearance.Default">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.Small">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- 기타 텍스트 스타일 -->
    <style name="FooterStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
