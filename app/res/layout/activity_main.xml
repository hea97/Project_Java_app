<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- 상단 달러 코인 이미지 -->
    <ImageView
        android:id="@+id/dollar_coin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@dollar-dollar-color.png"/>

    <!-- 메인 타이틀 -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dollar_coin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="오늘의 환율은 얼마일까요?"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:fontFamily="@font/black_han_sans"/>

    <!-- 아시아 섹션 -->
    <TextView
        android:id="@+id/asia_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="아시아"
        android:textColor="#FFFFFF"
        android:textSize="24sp"/>

    <!-- 구분선 -->
    <View
        android:id="@+id/asia_line"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_below="@id/asia_title"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"/>

    <!-- 국가 플래그 -->
    <ImageView
        android:id="@ch.png"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/asia_line"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ch"/>

    <ImageView
        android:id="@jp.png"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/asia_line"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/jp"/>

    <!-- 아메리카 섹션 -->
    <TextView
        android:id="@+id/america_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/china_flag"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="아메리카"
        android:textColor="#FFFFFF"
        android:textSize="24sp"/>

    <ImageView
        android:id="us.png"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/america_title"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/us"/>

    <!-- 하단 설명 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:background="#4E4D4D"
        android:text="한 나라의 화폐와 외국 화폐의 교환 비율"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"/>

</RelativeLayout>